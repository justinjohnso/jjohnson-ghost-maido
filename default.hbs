<!DOCTYPE html>
<html lang="{{@site.lang}}">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>{{meta_title page=(t "meta-page")}}</title>
		<meta name="HandheldFriendly" content="True">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		{{>services/google_fonts}}
		<link rel="stylesheet" type="text/css" href="https://res.cloudinary.com/justinjohnson/raw/upload/jjohnson.io/css/screen.css">
		{{ghost_head}}
	</head>
	<body class="{{body_class}}{{#get "tags" limit="all" filter="visibility:internal" as |tags|}}{{#tags}} global-{{slug}}{{/tags}}{{/get}}">
		{{>members_notifications}}
		<div class="global-container">
			{{^is "author,tag,post"}}
			{{#if @site.cover_image}}
			<div class="global-cover global-bg-image" style="background-image: url({{@site.cover_image}})"></div>
			{{/if}}
			{{/is}}
			{{>header}}
			<div class="global-main">
				{{{body}}}
				{{>members_subscribe_form}}
				{{#if @site.description}}
				<div class="description-section global-flex">{{@site.description}}</div>
				{{/if}}
			</div>
			{{>footer}}
		</div>
		{{!-- {{>search}} --}}
		{{#if pagination.pages}}
		<!-- Include Cloudinary for image processing -->
		<script src="https://res.cloudinary.com/justinjohnson/raw/upload/jjohnson.io/js/cloudinary-core-shrinkwrap.js" type="text/javascript"></script>
		<script type="text/javascript">
			var cl = cloudinary.Cloudinary.new({cloud_name: "justinjohnson"}); 
			// replace 'demo' with your cloud name in the line above 
			cl.responsive();
		</script>
		<script src="https://res.cloudinary.com/justinjohnson/raw/upload/jjohnson.io/js/index.js"></script>
		{{/if}}
		{{#is "post, page"}}
		<script src="https://res.cloudinary.com/justinjohnson/raw/upload/jjohnson.io/js/post.js"></script>
		{{/is}}
		<script src="https://res.cloudinary.com/justinjohnson/raw/upload/jjohnson.io/js/global.js"></script>
		<script>
		document.addEventListener("DOMContentLoaded", function() {
			const body = document.body;
			body.classList.add("is-loaded")
		})
		</script>
		{{{block "members_notifications_script"}}}
		{{ghost_foot}}
	</body>
</html>